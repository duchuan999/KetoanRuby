
<div >
  <h2>Danh Sách Kho</h2>
  <%= link_to("<< Thêm mới", {:action => 'new'}, :class => 'btn btn-primary') %>
  <table class="TFtable" border="0">
    <tr>
      <th align="center">Mã</th>
      <th align="center">Tên</th>
      <th align="center" colspan="3">Tùy chọn</th>
    </tr>
    <% @dmkho.each do |dmkho| %>
        <tr>
          <td><%= dmkho.makho %></td>
          <td align="left"><%= dmkho.tenkho%></td>
          <td width="10"><%= link_to("Xem", {:action => 'show', :makho => dmkho.makho}, :class => 'btn btn-mini') %></td>
          <td width="10"><%= link_to("Xóa",{:action => 'delete',:makho => dmkho.makho}, :confirm => 'Are you sure?',:class => 'btn btn-mini btn-danger') %></td>
          <td width="10"><%= link_to("Sửa",{:action => 'edit',:makho => dmkho.makho},:class => 'btn btn-mini') %></td>
        </tr>
    <% end %>
  </table>
</div>
